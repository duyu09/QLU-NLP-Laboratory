<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.train.cmsCloud.mapper.NlpAdmissionDetailsMapper">

    <resultMap type="NlpAdmissionDetails" id="NlpAdmissionDetailsResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="synopsisContent"    column="synopsis_content"    />
        <result property="recordContent"    column="record_content"    />
        <result property="configId"    column="config_id"    />
        <result property="postSort"    column="post_sort"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectNlpAdmissionDetailsVo">
        select id, title, synopsis_content, record_content, config_id, post_sort, status, create_by, create_time, update_by, update_time from nlp_admission_details
    </sql>

    <select id="selectNlpAdmissionDetailsList" parameterType="NlpAdmissionDetails" resultMap="NlpAdmissionDetailsResult">
        <include refid="selectNlpAdmissionDetailsVo"/>
        <where>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="synopsisContent != null  and synopsisContent != ''"> and synopsis_content = #{synopsisContent}</if>
            <if test="recordContent != null  and recordContent != ''"> and record_content = #{recordContent}</if>
            <if test="configId != null  and configId != ''"> and config_id = #{configId}</if>
            <if test="postSort != null "> and post_sort = #{postSort}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectNlpAdmissionDetailsById" parameterType="Integer" resultMap="NlpAdmissionDetailsResult">
        <include refid="selectNlpAdmissionDetailsVo"/>
        where id = #{id}
    </select>

    <insert id="insertNlpAdmissionDetails" parameterType="NlpAdmissionDetails" useGeneratedKeys="true" keyProperty="id">
        insert into nlp_admission_details
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="synopsisContent != null">synopsis_content,</if>
            <if test="recordContent != null">record_content,</if>
            <if test="configId != null and configId != ''">config_id,</if>
            <if test="postSort != null">post_sort,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="synopsisContent != null">#{synopsisContent},</if>
            <if test="recordContent != null">#{recordContent},</if>
            <if test="configId != null and configId != ''">#{configId},</if>
            <if test="postSort != null">#{postSort},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateNlpAdmissionDetails" parameterType="NlpAdmissionDetails">
        update nlp_admission_details
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null">title = #{title},</if>
            <if test="synopsisContent != null">synopsis_content = #{synopsisContent},</if>
            <if test="recordContent != null">record_content = #{recordContent},</if>
            <if test="configId != null and configId != ''">config_id = #{configId},</if>
            <if test="postSort != null">post_sort = #{postSort},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteNlpAdmissionDetailsById" parameterType="Integer">
        delete from nlp_admission_details where id = #{id}
    </delete>

    <delete id="deleteNlpAdmissionDetailsByIds" parameterType="String">
        delete from nlp_admission_details where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>